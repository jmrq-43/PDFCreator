<Window x:Class="GasotecFactureCreator.Presentation.ClientDataCollectorWIndow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:GasotecFactureCreator"
        mc:Ignorable="d"
        Title="Datos del cliente" Height="650" Width="1100">

    <Grid Background="#D9D9D9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Background=" #0F0788">
            <TextBlock
                FontSize="50"
                Foreground=" #ffff"
                TextAlignment="Center"
                Margin="10">
                Datos del cliente
            </TextBlock>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid
                        Grid.Row="0"
                        Margin="0,40,0,0">
                        <TextBlock
                            FontSize="28"
                            Text="Nombre" />
                        <TextBox
                            x:Name="TextBoxName"
                            Height="30"
                            Width="130"
                            Margin="0,40,0,0"
                            Style="{StaticResource RoundedTextBoxStyle}">
                        </TextBox>
                    </Grid>
                    <Grid
                        Grid.Row="1"
                        Margin="0,40,0,0">
                        <TextBlock
                            FontSize="28"
                            Text="Direccion" />
                        <TextBox
                            x:Name="TextBoxAddres"
                            Height="30"
                            Width="130"
                            Margin="00,40,0,0"
                            Style="{StaticResource RoundedTextBoxStyle}" />
                    </Grid>
                    <Grid
                        Grid.Row="2"
                        Margin="0,40,0,0">
                        <TextBlock
                            FontSize="28"
                            Text="Telefono" />
                        <TextBox
                            x:Name="TextBoxPhone"
                            Height="30"
                            Width="130"
                            Margin="00,40,0,0"
                            Style="{StaticResource RoundedTextBoxStyle}" />
                    </Grid>
                    <Grid
                        Grid.Row="3"
                        Margin="0,40,0,0">
                        <TextBlock
                            FontSize="28"
                            Text="Correo" />
                        <TextBox
                            x:Name="TextBoxMail"
                            Height="30"
                            Width="130"
                            Margin="00,40,0,0"
                            Style="{StaticResource RoundedTextBoxStyle}" />
                    </Grid>
                    <Grid
                        Grid.Row="4"
                        Margin="0,40,0,0">
                        <TextBlock
                            FontSize="28"
                            Text="NIT" />
                        <TextBox
                            x:Name="TextBoxNit"
                            Height="30"
                            Width="130"
                            Margin="00,40,0,0"
                            Style="{StaticResource RoundedTextBoxStyle}" />
                    </Grid>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Row="2">
            <Button
                Margin="30,0,0,0"
                HorizontalAlignment="Left"
                Width="140"
                Height="50"
                Click="Back_Button_Click"
                Content="volver"
                Style="{StaticResource RoundedButtonStyle}">
            </Button>
        </Grid>
        <Grid Grid.Row="2">
            <Button
                Margin="0,0,30,20"
                HorizontalAlignment="Right"
                Width="140"
                Height="50"
                Click="Sig_Button_Click"
                Content="Siguinte"
                Style="{StaticResource RoundedButtonStyle}">
            </Button>
        </Grid>
    </Grid>
</Window>