<Window x:Class="GasotecFactureCreator.Presentation.DescriptionWindowService"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:GasotecFactureCreator"
        mc:Ignorable="d"
        Title="Descripcion del servicio" Height="650" Width="1100">
    <Grid Background="#D9D9D9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Background=" #0F0788">
            <TextBlock
                FontSize="50"
                Foreground=" #ffff"
                TextAlignment="Center"
                Margin="10">
                Descripcion del servicio
            </TextBlock>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                FontSize="28"
                Margin="20,20,0,0"
                HorizontalAlignment="Center"
                Text="Cantidad" />
            <TextBlock
                Grid.Column="1"
                FontSize="28"
                Margin="20,20,0,0"
                HorizontalAlignment="Center"
                Text="Tipo de servicio" />
            <TextBlock
                Grid.Column="2"
                FontSize="28"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Text="Descripcion" />
            <TextBlock
                Grid.Column="3"
                FontSize="28"
                Margin="0,20,30,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="Valor" />
        </Grid>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="MainStackPanel">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>


                </Grid>
            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0"
                  Margin="20,0,0,30">
                <TextBlock
                    x:Name="TextBlockRecivido"
                    Grid.Row="0"
                    Grid.Column="0"
                    FontSize="28"
                    Text="Recivido por: " />
            </Grid>

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                FontSize="28"
                HorizontalAlignment="Center"
                Text="Abono  " />

            <TextBox
                x:Name="TextBoxAbono"
                Margin="20,0,20,0"
                Grid.Column="0"
                Grid.Row="2"
                Height="30"
                TextChanged="TextBoxAbono_TextChanged"
                Style="{StaticResource RoundedTextBoxStyle}"/>

            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                FontSize="28"
                HorizontalAlignment="Center"
                Text="Saldo" />

            <TextBox
                x:Name="TextBoxSaldo"
                Margin="20,0,20,0"
                Grid.Column="1"
                Grid.Row="2"
                Height="30"
                Style="{StaticResource RoundedTextBoxStyle}"/>

            <TextBlock
                Grid.Row="1"
                Grid.Column="2"
                FontSize="28"
                HorizontalAlignment="Center"
                Text="Total" />

            <TextBox
                x:Name="TextBoxTotal"
                Margin="20,0,20,0"
                Grid.Column="2"
                Grid.Row="2"
                Height="30"
                Style="{StaticResource RoundedTextBoxStyle}"/>

        </Grid>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Margin="20,20,0,10"
                HorizontalAlignment="Left"
                Height="50"
                Width="140"
                Content="volver"
                Click="Back_Button_Click"
                Style="{StaticResource RoundedButtonStyle}" />

            <Button
                Grid.Column="1"
                Margin="0,20,0,10"
                HorizontalAlignment="Center"
                Content="Agregar servicio "
                Width="260"
                Height="50"
                Style="{StaticResource RoundedButtonStyle}"
                Click="AddRow_Click" />

            <Button
                Grid.Column="2"
                Margin="0,20,0,10"
                HorizontalAlignment="Center"
                Content="Eliminar Servicio  "
                Width="260"
                Height="50"
                Style="{StaticResource RoundedButtonStyle}"
                Click="DeleteRow_CLick" />

            <Button
                Grid.Column="3"
                Margin="0,20,20,10"
                HorizontalAlignment="Right"
                Width="140"
                Height="50"
                Content="Finalizar"
                Click="SaveService"
                Style="{StaticResource RoundedButtonStyle}" />
        </Grid>
    </Grid>
</Window>