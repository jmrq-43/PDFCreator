<Window x:Class="GasotecFactureCreator.DescriptionWindowService"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:GasotecFactureCreator"
        mc:Ignorable="d"
        Title="DescriptionWindowService" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Background=" #0F0788">
            <TextBlock
                FontSize="50"
                Foreground=" #ffff"
                TextAlignment="Center"
                Margin="10">
                Descripcion del servicio
            </TextBlock>
        </Grid>

        <Grid Grid.Row="1">
           <Grid.ColumnDefinitions>
               <ColumnDefinition Width="*"/>
               <ColumnDefinition Width="*"/>
               <ColumnDefinition Width="*"/>
           </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                FontSize="28"
                Margin="20,20,0,0"
                HorizontalAlignment="Center"
                Text="Tipo de servicio" />
            <TextBlock
                Grid.Column="1"
                FontSize="28"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Text="Descripcion"/>
            <TextBlock
                Grid.Column="2"
                FontSize="28"
                Margin="0,20,30,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="Valor" />
        </Grid>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="MainStackPanel">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Menu Grid.Column="0" Margin="0,50,0,0">
                        <MenuItem x:Name="MenuItemServicio" Header="Servicio">
                            <MenuItem Header="Mantenimiento" Click="MenuItemSubmenu_Click" />
                            <MenuItem Header="Reparacion" Click="MenuItemSubmenu_Click" />
                            <MenuItem Header="Instalacion" Click="MenuItemSubmenu_Click" />
                            <MenuItem Header="Venta repuesto" Click="MenuItemSubmenu_Click" />
                            <MenuItem Header="Venta Equipo" Click="MenuItemSubmenu_Click" />
                        </MenuItem>
                    </Menu>
                    <TextBox
                        Style="{StaticResource RoundedTextBoxStyle}"
                        x:Name="TextBoxDescription"
                        Grid.Column="1"
                        Margin="0,50,0,0" />
                    <TextBox
                        Style="{StaticResource RoundedTextBoxStyle}"
                        x:Name="TextBoxValue"
                        Grid.Column="2"
                        Margin="0,50,0,0" />
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Row="3">
            <Button
                Margin="20,20,0,10"
                HorizontalAlignment="Left"
                Height="50"
                Width="140"
                Content="volver"
                Style="{StaticResource RoundedButtonStyle}"/>

            <Button
                Margin="20,20,0,10"
                HorizontalAlignment="Center"
                Content="Agregar servicio "
                Width="240"
                Height="50"
                Style="{StaticResource RoundedButtonStyle}"
                Click="AddRow_Click" />

            <Button
                Margin="0,20,20,10"
                HorizontalAlignment="Right"
                Width="140"
                Height="50"
                Content="Finalizar"
                Style="{StaticResource RoundedButtonStyle}"/>
        </Grid>
    </Grid>
</Window>
